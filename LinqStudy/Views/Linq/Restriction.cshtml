<pre>
    public void Linq3()
    {
        List&lt;Product&gt; products = data.GetProductList();

        var expensiveInStockProducts =
            from prod in products
            where prod.UnitsInStock > 0 && prod.UnitPrice > 3.00M
            select prod;

