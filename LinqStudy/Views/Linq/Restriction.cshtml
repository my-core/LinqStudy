<h2 id="Linq2">2、Where - Simple 2</h2>
<p>获取库存为0的产品</p>
<pre>
    public void Linq2()
    {
        List&lt;Product&gt; products = GetProductList();
     
        var soldOutProducts =
            from p in products
            where p.UnitsInStock == 0
            select p;
     
        Console.WriteLine("库存为0的产品：");
        foreach (var product in soldOutProducts)
        {
            Console.WriteLine(product.ProductName);
        }
    }
</pre>
